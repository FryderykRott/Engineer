<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/signIn"
        android:name="com.fryderykrott.receiptcarer.Fragments.SignIn"
        android:label="fragment_login"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.fryderykrott.receiptcarer.Fragments.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_signIn"
            app:destination="@id/signIn" />
        <action
            android:id="@+id/action_home_to_addReceipt"
            app:destination="@id/addReceipt" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.fryderykrott.receiptcarer.Fragments.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUp_to_home"
            app:destination="@id/home"
            app:popUpTo="@+id/home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addReceipt"
        android:name="com.fryderykrott.receiptcarer.AddReceipt"
        android:label="fragment_add_receipt"
        tools:layout="@layout/fragment_add_receipt" />
</navigation>